<div class="container" style="margin:100px auto">
    <div class="row">
        <div class=col-6 offset-3>
            <h4>Modificar una novedad</h4>
            <form action="/admin/novedades/modificar" method="post"
            enctype="multiplart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control"
                    name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control"
                    name="subtitulo" value="{{novedad.subtitulo}}">
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea type="text" class="form-control"
                    name="cuerpo" value="{{novedad.cuerpo}}"></textarea>
                </div>
                <div class="form-group">
                    <label for=""><Link></Link></label>
                    <textarea type="text" class="form-control"
                    name="link" value="{{novedad.link}}"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
        </div>
    </div>
</div>